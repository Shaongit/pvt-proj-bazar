@model IEnumerable<EC.Model.Vendor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>Name
        </th>
        <th>Description
        </th>
        <th>Address
        </th>
        <th>Published
        </th>
        <th>Deleted
        </th>
        <th>IsActive
        </th>
        <th>CreateDate
        </th>
        <th>UpdatedDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @item.Published
            </td>
            <td>
                @item.Deleted
            </td>
            <td>
                @item.IsActive
            </td>
            <td>
                @String.Format("{0:g}", item.CreateDate)
            </td>
            <td>
                @String.Format("{0:g}", item.UpdatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


