@model EC.Model.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Category</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">MetaTitle</div>
    <div class="display-field">@Model.MetaTitle</div>

    <div class="display-label">ParentCategoryId</div>
    <div class="display-field">@Model.ParentCategoryId</div>

    <div class="display-label">SubCategories</div>
    <div class="display-field">@(Model.SubCategories == null ? "None" : Model.SubCategories.Count.ToString())</div>

    <div class="display-label">PictureId</div>
    <div class="display-field">@Model.PictureId</div>

    <div class="display-label">ShowOnHomePage</div>
    <div class="display-field">@Model.ShowOnHomePage</div>

    <div class="display-label">Published</div>
    <div class="display-field">@Model.Published</div>

    <div class="display-label">Deleted</div>
    <div class="display-field">@Model.Deleted</div>

    <div class="display-label">CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">UpdatedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.UpdatedDate)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


